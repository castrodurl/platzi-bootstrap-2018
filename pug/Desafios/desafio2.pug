mixin columnas(numero)
  - for (var x = 1; x <= numero; x ++)
      .col-6.col-md-3
        p= x

mixin columnaschicas(numero)
  - for (var x = 1; x <= numero; x ++)
    .col-lg.col-md-6.col-12
      p= x

